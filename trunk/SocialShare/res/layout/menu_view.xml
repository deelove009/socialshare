<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/viwTopBar"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:clickable="true" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#66FFFFFF" >

        <LinearLayout
            android:id="@+id/viwSlideMenu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:clickable="true" >

            <ScrollView
                android:id="@+id/scrSettingsView"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#FFFFFF" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="10dp"
                        android:background="@drawable/seperator_h3d_top" >
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/viwShareThought"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible" >

                        <EditText
                            android:id="@+id/edtThought"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="your thought"
                            android:inputType="textMultiLine"
                            android:maxLength="140"
                            android:minLines="3"
                            android:textColor="#000000"
                            android:textColorHint="#BBBBBB" >
                        </EditText>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" >

                            <ToggleButton
                                android:id="@+id/tglGoogle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textOff="G+"
                                android:textOn="G+" />

                            <ToggleButton
                                android:id="@+id/tglFacebook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textOff="FB"
                                android:textOn="FB" />

                            <ToggleButton
                                android:id="@+id/tglTwitter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textOff="Twitter"
                                android:textOn="Twitter" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnShareThought"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:text="SHARE" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="5dp"
                            android:background="@drawable/seperator_h3d_bottom" >
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtShowSettings"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="Settings"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/seperator_h3d_bottom" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtShowGuide"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="Guide"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/seperator_h3d_top" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtShowAbout"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="About"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/seperator_h3d_bottom" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtShowVersion"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:text="Version 1.0"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="5dp"
                        android:background="@drawable/seperator_h3d_top" >
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="fill_parent"
                android:background="@drawable/seperator_v3d_right" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viwSideBar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.8"
            android:clickable="true" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>